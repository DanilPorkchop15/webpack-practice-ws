{
  "compilerOptions": {
    "outDir": "build/lib",
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "lib": ["es2017", "dom"],
    "module": "CommonJS", 
    "target": "es2017",
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "webpack.config.ts"],
  "exclude": ["node_modules", "build", "scripts"]
}
